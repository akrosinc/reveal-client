<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <CheckBox
        android:id="@+id/offline_map_checkbox"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/task_register_padding"
        android:paddingBottom="0dp"
        android:scrollHorizontally="false"
        android:textAllCaps="true"
        android:textColor="#FAAB00"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/downloading_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <TextView
        android:id="@+id/offline_map_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/task_action_text"
        app:layout_constraintBottom_toTopOf="@id/downloading_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/offline_map_checkbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/downloading_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="@string/downloading"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/downloading_hint_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/offline_map_checkbox"
        app:layout_constraintTop_toBottomOf="@id/offline_map_label"
         />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/downloading_label" />


</androidx.constraintlayout.widget.ConstraintLayout>