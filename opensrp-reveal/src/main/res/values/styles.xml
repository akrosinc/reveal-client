<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RevealDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/login_font_size</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Nav.ThemeOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="LocationComponentStyling" parent="mapbox_LocationComponent">
        <item name="mapbox_accuracyColor">#81c2ee</item>
        <item name="mapbox_accuracyAlpha">0.4</item>
    </style>


    <style name="FilterTaskStyle" parent="AppTheme">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilterTaskStyle.Label">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>


    <style name="TaskFilterToggle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/toggle_color</item>
        <item name="android:layout_marginBottom">@dimen/filter_toggle_bottom_margin</item>
        <item name="android:layout_marginEnd">@dimen/filter_toggle_end_margin</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
